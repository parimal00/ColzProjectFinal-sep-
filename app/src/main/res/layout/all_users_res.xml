<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="name :"
            android:textColor="#20eb7d"
            android:layout_height="20dp"/>

    <TextView
        android:id="@+id/name_id"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"/>



</LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Address :"
            android:textColor="#20eb7d"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/address_id"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"/>



    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Contact No :"
            android:textColor="#20eb7d"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/contact_no_id"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"/>



    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Email :"
            android:textColor="#20eb7d"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/email_id"
            android:layout_width="0dp"
            android:layout_weight="0.5"

            android:layout_height="wrap_content"/>



    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:text="Status:"
            android:textColor="#20eb7d"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/status_id"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"/>



    </LinearLayout>
    <Button
                android:id="@+id/disableUser_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="disable user"
                android:background="#FF0000"
                android:textColor="#ffff"
                android:layout_marginBottom="10dp"
                />
    <Button
        android:id="@+id/enable_user_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Enable user"
        android:background="#20eb7d"
        android:textColor="#ffff"
        android:layout_marginBottom="30dp"
        />

</LinearLayout>