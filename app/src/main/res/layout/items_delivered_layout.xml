<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="10dp">

    <ImageView
        android:id="@+id/productImagezzzz_id"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
         android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="Product Id:"
            android:textColor="#20eb7d"
            android:textSize="18dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/product_id_id"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:layout_height="40dp"
            android:textSize="18dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="Product Name:"
            android:textColor="#20eb7d"
            android:textSize="18dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/product_name_id"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:layout_height="40dp"
            android:text="wajdkfjasfljsdlfjsaldjf"
            android:textSize="18dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="Product Price:"
            android:textColor="#20eb7d"
            android:textSize="18dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/product_price_id"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:layout_height="40dp"
            android:text="wajdkfjasfljsdlfjsaldjf"
            android:textSize="18dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="Username:"
            android:textColor="#20eb7d"
            android:textSize="18dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/orderedUSerName_id"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:layout_height="40dp"
            android:text="wajdkfjasfljsdlfjsaldjf"
            android:textSize="18dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="Address:"
            android:textColor="#20eb7d"
            android:textSize="18dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>
    <TextView
        android:id="@+id/orderedUser_address_id"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:textColor="#000000"
        android:layout_height="40dp"
        android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="Phone No:"
            android:textColor="#20eb7d"
            android:textSize="18dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>
    <TextView
        android:id="@+id/orderedUser_phone_no_id"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:textColor="#000000"
        android:layout_height="40dp"
        android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="Quantity:"
            android:textColor="#20eb7d"
            android:textSize="18dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>
    <TextView
        android:id="@+id/orderedUser_quantity_id"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#20eb7d"
        android:textColor="#ffff"
        android:id="@+id/view_signature_id"
        android:text="View Signature"
        />
</LinearLayout>
</LinearLayout>