<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/productImagezzzz_id"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <TextView
        android:id="@+id/orderedUSerName_id"
        android:layout_width="357dp"
        android:layout_height="71dp"
        android:layout_marginTop="72dp"
        android:text="TextView"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/orderedUser_address_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/orderedUser_phone_no_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/orderedUser_quantity_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/item_delivered_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Item Delivered?"/>


</LinearLayout>