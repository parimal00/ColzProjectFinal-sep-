<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/items_bought_image_id"
        android:layout_width="363dp"
        android:layout_height="297dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="Product Id:"
            android:textColor="#20eb7d"
            android:textSize="18dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/product_id_id"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:layout_height="40dp"
            android:textSize="18dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="Seller Name:"
            android:textColor="#20eb7d"
            android:textSize="18dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/seller_name_id"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="Seller Contact No:"
            android:textColor="#20eb7d"
            android:textSize="18dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/seller_contact_no_id"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="Item Name:"
            android:textColor="#20eb7d"
            android:textSize="18dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/itemsBought_itemName_id"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="Price:"
            android:textColor="#20eb7d"
            android:textSize="18dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/itemsBought_price_id"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:text="Quantity:"
            android:textColor="#20eb7d"
            android:textSize="18dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/itemsBought_quantity_id"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:textSize="18dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/send_review_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#20eb7d"
        android:textColor="#ffff"
        android:text="Send Review"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/report_user_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#20eb7d"
        android:textColor="#ffff"
        android:text="Report"
        />
</LinearLayout>